extends no_site_header_layout.pug

block content
    .small-container
        .ui.middle.aligned.center.aligned.grid
            .column
                form.ui.large.form(action="/app/reset-password" method="post")
                    .ui.segment
                        .ui.column.centered.grid
                            p.large.ui.grey.header Reset Password
                        .field
                            input(type="text" name="email" placeholder="abc@mail.com")

                        button.ui.fluid.large.teal.submit.button Send Email
                .column
                    .row
                        span Already have an account? 
                        a.ui.fluid.teal(href="/app")  Login here.
