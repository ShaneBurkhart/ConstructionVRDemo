.small-container
  %h1 Welcome Back!

  %form.ui.form{ action: "/sign_up", method: :post }
    .two.fields
      .field
        %label First Name
        %input{ type: "text", name: "first_name", placeholder: "Michael" }

      .field
        %label Last Name
        %input{ type: "text", name: "last_name", placeholder: "Jordan" }

    .field
      %label Team Name
      %input{ type: "text", name: "team_name", placeholder: "Jordan Architecture + Design" }

    .field
      %label Email
      %input{ type: "text", name: "email", placeholder: "mike@architect.com" }

    .field
      %label Password
      %input{ type: "password", name: "password", placeholder: "*********" }

    %button.ui.button{ type: "submit" } Sign In
