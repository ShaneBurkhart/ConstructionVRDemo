.small-container
  %h1 Welcome Back!

  %form.ui.form{ action: "/sign_in", method: :post }
    .field
      %label Email
      %input{ type: "text", name: "email", placeholder: "mike@architect.com", value: defined?(email) ? email : "" }

    .field
      %label Password
      %input{ type: "password", name: "password", placeholder: "*********" }

    %button.ui.button{ type: "submit" } Sign In

    %a{ href: "/sign_up" } Don't have an account? Sign up.
