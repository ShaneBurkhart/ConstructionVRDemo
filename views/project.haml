.container
  %h1= project["Name"]

  - if is_admin_mode
    %a{ href: "/project/#{access_token}/feedbacks" } All Feedbacks
    | |
    %a{ href: "/project/#{access_token}/procurement_forms" } Procurement Forms

  %hr

  #unit-previews
    - units.each do |unit|
      .unit-preview{ data: { href: "/project/#{access_token}/unit/#{unit["Record ID"]}" } }
        .image-wrapper
          %img{ src: unit["Floor Plan Image"][0]["url"] }
        .name= unit["Name"]

:javascript
  $(document).ready(function () {
    var $unitPreviews = $(".unit-preview");

    $unitPreviews.click(function (e) {
      e.preventDefault();
      var $this = $(this);
      var unitHref = $this.data("href");
      window.location.href = unitHref;
    });
  });
