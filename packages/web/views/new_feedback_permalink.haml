.container
  %form{ action: "/project/#{access_token}/feedbacks/permalinks", method: :post }
    %textarea{ name: "markdown", style: "min-height: 500px; width: 100%;" }
      - @units.each do |u|
        - next if u.feedbacks.count == 0

        = "###{u['Name']}"

        &#13; &#13;

        - u.feedbacks.reverse.each do |f|
          - next if f["Screenshot"].nil?

          = "![](#{f['Screenshot'][0]['url']})"
          &#13;
          = f.notes_html

          &#13; &#13;

    %input{ type: :submit, value: "Submit"}
